# Copy this file to .env.local and fill in your Azure OpenAI details
# For Vercel deployment, add these as environment variables in Vercel dashboard

# Azure OpenAI Configuration (optional if using OpenRouter)
VITE_OPENAI_API_BASE=https://your-resource.openai.azure.com
VITE_AZURE_OPENAI_KEY=your-api-key-here
VITE_AZURE_OPENAI_DEPLOYMENT=gpt-4o
VITE_AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Alternative format (also supported)
OPENAI_API_BASE=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Optional: Local development proxy port
VITE_PROXY_PORT=5174

# OpenRouter Configuration (RECOMMENDED)
# Add OPENROUTER_API_KEY in Vercel Project Settings (server-side only)
OPENROUTER_API_KEY=your-openrouter-key-here
# Optional model selection (default: gpt-oss-20b)
OPENROUTER_MODEL=gpt-oss-20b
# Optional API base override (defaults to https://openrouter.ai/api/v1/chat/completions)
OPENROUTER_API_BASE=https://openrouter.ai/api/v1/chat/completions
